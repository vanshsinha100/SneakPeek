/// ===== HERO =====
class _HeroArea extends StatelessWidget {
  const _HeroArea();

  @override
  Widget build(BuildContext context) {
    final w = MediaQuery.of(context).size.width;
    final isWide = w > 1100;

    return Padding(
      padding: const EdgeInsets.symmetric(horizontal: 14),
      child: Stack(
        children: [
          // Main glass canvas (opaque)
          Positioned.fill(
            child: ClipRRect(
              borderRadius: BorderRadius.circular(18),
              child: Container(
                decoration: const BoxDecoration(
                  gradient: LinearGradient(
                    colors: [Color(0xFF15171B), Color(0xFF0F1013)],
                    begin: Alignment.topCenter,
                    end: Alignment.bottomCenter,
                  ),
                ),
              ),
            ),
          ),

          // ===== Watermark INSIDE hero (now visible) =====
          Positioned.fill(
            child: IgnorePointer(
              child: Padding(
                padding: const EdgeInsets.symmetric(horizontal: 24),
                child: Center(
                  child: FittedBox(
                    fit: BoxFit.contain,
                    child: Opacity(
                      opacity: 0.04, // Decreased opacity for more subtle effect
                      child: Text(
                        'NIKE',
                        style: GoogleFonts.inter(
                          fontSize: 500,
                          fontWeight: FontWeight.w900,
                          letterSpacing: 40.0,
                          height: 1.0,
                          color: Colors.white, // Solid white fill
                        ),
                        maxLines: 1,
                        overflow: TextOverflow.visible,
                      ),
                    ),
                  ),
                ),
              ),
            ),
          ),

          // Content
          Padding(
            padding: const EdgeInsets.symmetric(horizontal: 36, vertical: 28),
            child: Row(
              crossAxisAlignment: CrossAxisAlignment.center,
              children: [
                // LEFT: JUST DO IT.
                Expanded(
                  flex: 4,
                  child: FittedBox(
                    alignment: Alignment.centerLeft,
                    child: _JustDoItText(),
                  ),
                ),

                // CENTER: Shoe + glow
                const Expanded(
                  flex: 6,
                  child: Stack(
                    alignment: Alignment.center,
                    children: [
                      _GlowHalo(),
                      _HeroShoe(),
                    ],
                  ),
                ),

                // RIGHT: product meta + price
                if (isWide)
                  const Expanded(
                    flex: 4,
                    child: Align(
                      alignment: Alignment.centerRight,
                      child: _HeroMeta(),
                    ),
                  ),
              ],
            ),
          ),
        ],
      ),
    );
  }
}

class _JustDoItText extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    final base = GoogleFonts.interTight(
      fontWeight: FontWeight.w700,
      letterSpacing: 2,
      height: 1.02,
    );
    return Column(
      crossAxisAlignment: CrossAxisAlignment.start,
      children: [
        Text('JUST', style: base.copyWith(fontSize: 120, color: Colors.white)),
        const SizedBox(height: 6),
        Text('DO', style: base.copyWith(fontSize: 120, color: Colors.white)),
        const SizedBox(height: 6),
        Text(
          'IT.',
          style: base.copyWith(fontSize: 120, color: Colors.white.withOpacity(.92)),
        ),
      ],
    );
  }
}

