/// ===== CAROUSEL =====
class _BottomCarousel extends StatelessWidget {
  const _BottomCarousel();

  @override
  Widget build(BuildContext context) {
    final items = <_CardData>[
      _CardData('NIKE AIR\nHUARACHE', 180, 'assets/card_shoe_1.png'),
      _CardData('NIKE AIR\nAIR MAX 270', 190, 'assets/card_shoe_2.png'),
      _CardData('NIKE AIR\nZOOM VOMERO', 110, 'assets/card_shoe_3.png'),
      _CardData('NIKE AIR\nONE TAKE', 180, 'assets/card_shoe_4.png'),
    ];

    return SizedBox(
      height: 160,
      child: Center(
        child: ListView.separated(
          scrollDirection: Axis.horizontal,
          padding: const EdgeInsets.symmetric(horizontal: 24),
          itemCount: items.length,
          separatorBuilder: (_, __) => const SizedBox(width: 22),
          itemBuilder: (_, i) => _ProductCard(data: items[i]),
          physics: const BouncingScrollPhysics(),
          shrinkWrap: true,
        ),
      ),
    );
  }
}

class _CardData {
  final String title;
  final int price;
  final String asset;
  _CardData(this.title, this.price, this.asset);
}

